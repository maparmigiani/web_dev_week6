<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<main class = "container">
    <div class= "row">

        <form class ="form" method = "POST">

            <div class="form-group">
              <label for="nameTextField">Contact Name</label>
              <input type="text" class="form-control" id="nameTextField"  placeholder="Enter the contact name"
              name="name" 
              value = "<%=information.name%>"
              required>
            </div>

            <div class="form-group">
                <label for="numberTextField">Phone Number</label>
                <input type="text" class="form-control" id="numberTextField"  placeholder="Enter the phone number (ex: +1 000 000-0000)"
                name="number" 
                value = "<%=information.number%>"
                required>
               
              </div>

            <div class="form-group">
                <label for="emailTextField">Email Address</label>
                <input type="email" class="form-control" id="emailTextField" placeholder="Enter the email address (ex: example@exp.com)"
                name="email" 
                value = "<%=information.email%>"
                required>
             </div>
             
            <button type="submit" class="btn btn-primary"><i class = "fas fa-edit"></i>Submit</button>
            <a href = "/information-list" class="btn btn-danger"><i class="fas fa-undo"></i>Cancel</a>
          </form>
    </div>
    
    </main>

